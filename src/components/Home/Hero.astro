---
import Container from "../Container.astro";
---

<section class="hero md:min-h-screen flex items-center -mx-4 px-4">
  <Container>
    <h1
      class="main-title max-w-lg font-bold text-center text-white text-5xl md:text-7xl mx-auto uk-animation-slide-left-small"
    >
      Granada Conference on End-of-Life:
      <br />
      <span class="text-3xl md:text-5xl block mt-5 uk-text-italic"
        >Evidence Based Ethics and Policy-making</span
      >
    </h1>

    <div
      class="mt-20 text-center cards-container flex-col md:flex-row"
      
    >
      <div class="card">
        <div
          class="uk-card uk-card-body uk-card-default uk-animation-slide-bottom-small"
        >
          <h3 class="uk-card-title">
            <span uk-icon="icon: location; ratio: 2" aria-label="Location"
            ></span>
          </h3>
          <p class="uk-margin font-bold text-2xl">
            Sala de Juntas, Carmen de la Victoria. Cta. Del Chapiz, 9, Albaic√≠n,
            18010, Granada, Spain
          </p>
          <a
            class="mt-5 text-black uk-text-bold"
            href="https://maps.app.goo.gl/JDMXKBo7hiAA4pL17"
            target="_blank"
          >
            Show me the map &rarr;
          </a>
        </div>
      </div>
      <div class="card">
        <div
          class="uk-card uk-card-body uk-card-default uk-animation-slide-bottom-small"
        >
          <h3 class="uk-card-title">
            <span uk-icon="icon: calendar; ratio: 2" aria-label="Date"></span>
          </h3>
          <p class="uk-margin font-bold text-2xl">8 May 2025 - 9 May 2025</p>
          <br />

          <a
            class="mt-5 text-black uk-text-bold"
            href="https://calendar.app.google/hFAPSujkb4WngCwg8"
            target="_blank"
          >
            Save the date &rarr;
          </a>
        </div>
      </div>
    </div>
  </Container>
</section>

<style>
  .hero {
    background-image: url(/hero.webp);
    background-size: cover;
    background-position: center;
    padding-top: 5rem;
    padding-bottom: 2rem;
  }

  .cards-container {
    display: flex;
    justify-content: space-between;
    align-items: stretch;
    gap: 32px;
  }
  .card {
    width: 50%;
  }

  @media (max-width: 768px) {
    .card {
      width: 100%;
    }
  }
  .uk-card {
    height: 100% !important;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
</style>